<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp"
                        android:paddingLeft="50dp"
                        android:text="@string/app_name"
                        android:textColor="#FFF"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:textAppearance="@android:style/TextAppearance.Large"/>
                    <android.support.v4.view.ViewPager
                        android:layout_marginTop="?attr/actionBarSize"
                        android:layout_marginBottom="60dp"
                        android:layout_width="match_parent"
                        android:id="@+id/main_view_pager"
                        android:layout_height="wrap_content"
                         />
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/content_main"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:behavior_overlapTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView

                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/quiz_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/question"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Quiz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/gallery_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/gallery"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Gallery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/newsfeed_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/post"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Wall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/map_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/map"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Map"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/teams_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/teamwork"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Teams"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/coreteam_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/boss"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Core Team"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/sponsor_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/cash"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Sponsors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/workshop_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/event"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Special Events"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/aboutnimbus_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/about"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="About Nimbus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/contributor_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/contributor"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="Contributors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/feedback_layout"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/feedback"
                                android:scaleType="centerCrop"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                />
                            <TextView
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textAlignment="center"
                                android:text="FeedBack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.BottomNavigationView
            app:layout_behavior="com.nith.appteam.nimbus.CustomView.BottomSheetBehavior"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/content_main"
            app:layout_anchorGravity="bottom"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="#FFF"
            app:itemTextColor="#FFF"
            app:menu="@menu/bottom_main_navigation"
             />

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/navigationdrawer_header"
        app:menu="@menu/navigationdrawer_menu" />

</android.support.v4.widget.DrawerLayout>