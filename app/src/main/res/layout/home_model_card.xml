<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardUseCompatPadding="true"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:layout_margin="5dp"
            android:background="#FFF">

            <!--<com.android.volley.toolbox.NetworkImageView
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    android:id="@+id/home_card_img"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    /> -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frstimg"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/small_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="title"
                android:id="@+id/not_title"
                android:layout_marginTop="12dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_alignTop="@+id/frstimg"
                android:layout_toRightOf="@+id/frstimg"
                android:layout_toEndOf="@+id/frstimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="id"
                android:id="@+id/not_id"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:layout_below="@+id/not_title"
                android:layout_alignLeft="@+id/not_title"
                android:layout_alignStart="@+id/not_title"
                android:layout_marginTop="4dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>