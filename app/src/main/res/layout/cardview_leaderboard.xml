<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:id="@+id/leader_pic"
            android:src="@drawable/person_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp">

            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/leader_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="User Name"
                    android:layout_margin="5dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/leader_score"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:text="score:754"
                    android:paddingTop="5dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:padding="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leader_rollno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Roll No"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/leader_sets"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:text="sets:35"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:id="@+id/leader_award"
                android:src="@drawable/trophy_participation"
                android:scaleType="centerCrop"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#33000000"/>

</android.support.v7.widget.CardView>