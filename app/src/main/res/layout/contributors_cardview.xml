<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/cvContributor"
android:layout_margin="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    android:weightSum="2">

    <ImageView
        android:layout_width="60dp"
        android:scaleType="centerCrop"
        android:layout_height="60dp"
        android:id="@+id/imgContributor"
        android:layout_margin="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/contributorName"
            android:text="contributorName"
            android:gravity="center"
            android:textColor="#111"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:linksClickable="true"
            android:layout_height="wrap_content"
            android:id="@+id/profileLink"
            android:textColor="#44a"
            android:text="www.github.com/TanujaMedisetti87"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>