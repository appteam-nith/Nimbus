<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="#FFF"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:layout_alignParentTop="true"
                android:id="@+id/topcard">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:elevation="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Title"
                        android:id="@+id/not2_title"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Body"
                        android:padding="5dp"
                        android:id="@+id/not2_body"
                        android:elevation="15dp"
                        android:layout_marginTop="12dp"
                        android:paddingBottom="5dp"
                        android:layout_below="@+id/not2_title"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:id="@+id/secondcard"
                android:layout_below="@+id/topcard"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="25dp"
                    android:background="#FFF"

                    android:layout_margin="6dp"
                    >
                    <ProgressBar
                        android:id="@+id/progress_not2"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:foregroundGravity="center"

                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not2_big_picture"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:layout_below="@+id/secondcard"
                android:layout_alignParentStart="true"
                android:id="@+id/thiredcard">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="25dp"
                    android:background="#FFF"
                    android:layout_margin="6dp">

                    <TextView
                        android:id="@+id/launch_url"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="url"
                        android:padding="5dp"
                        android:elevation="5dp"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>