<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nith.appteam.nimbus.Activity.TeamActivity"
    tools:showIn="@layout/activity_team">

    <RelativeLayout
        android:id="@+id/content_team"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/logoTeam"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_b_t"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/logoTeam"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textdeptteam"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoTeam"
            android:layout_marginLeft="20dp"
            android:text="Departmental Team"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
           />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="336dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/textdeptteam"
            android:layout_marginTop="5dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="30dp"
            android:paddingEnd="60dp"
            android:scaleType="centerInside"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingStart="60dp"

           />

        <TextView
            android:id="@+id/textcoreteam"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pager"
            android:layout_marginLeft="20dp"
            android:text="Core Team"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager2"
            android:layout_width="match_parent"
            android:layout_height="336dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/textcoreteam"
            android:layout_marginTop="5dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="30dp"
            android:paddingEnd="60dp"
            android:scaleType="centerInside"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingStart="60dp"

            />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoTeam"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/message_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/logoTeam"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:visibility="gone"
            />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

